rules_version = '2';

// TEMPORARY TEST RULES - ALLOWS ALL AUTHENTICATED UPLOADS
// Use this to test if upload works, then tighten security
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to read/write anywhere (TESTING ONLY)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
